<!-- Start Navigaiton -->
<div id="navigation">
	<div class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-inner">
			<div class="container">
				<%= link_to "The Acquianter", root_path, class: "brand"  %>
				<ul class="nav">
					<li><%= link_to(raw('<i class="icon-envelope icon-white"></i>'), conversations_path) %></li>
							<li><%= link_to(raw('<i class="icon-globe icon-white"></i>'), "#") %></li>
				</ul>
				<% if signed_in? %>
                    <%= form_tag users_path, method: 'get', class: "navbar-search pull-left" do %>
                        <%= text_field_tag :search, params[:search], placeholder: "Search by name or username", class: "search-query span4", "data-provide" => "typeahead" %>  
                        <%= image_submit_tag "search.png", :type => :image, class: "search", name: nil %>                              
                    <% end %>
                <% end %>
				<div class="nav-collapse">
					<ul class="nav pull-right">
						<% if signed_in? %>
						    <li><%= link_to "Profile", current_user %></li>
						    <li><%= link_to "Users", users_path %></li>								
							<li class="dropdown">
    							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
    							<ul class="dropdown-menu">
      								<li><%= link_to "Settings", edit_user_path(current_user) %></li>
      								<li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
    							</ul>
  							</li>
  						<% else %>
  						    <li><%= link_to "About", about_path =%></li>
  							<li><%= link_to "Sign Up", signup_path %></li>
							<li><%= link_to "Sign In", signin_path %></li>
					    <% end %>
					</ul>
				</div><!-- /.nav-collapse -->
			</div><!-- /.container -->
  		</div><!-- /.navbar-inner -->
	</div><!-- /.navbar -->
</div>
<!-- End of navigation --> 
