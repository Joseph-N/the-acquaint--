<% if @user.errors.any? %>
	<div class="alert alert-error">
		<a class="close" data-dismiss="alert" href="#">&times;</a>
  		<h6>Oops!! <%= pluralize(@user.errors.count, "errors") %> occured</h6>
  		<ul>
  			<% @user.errors.full_messages.each do |msg| %>
  				<li><%= msg %></li>
  			<% end %>
  		</ul>
    </div>
<% end %>
