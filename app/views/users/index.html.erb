<% provide(:title, "All users") %>
<% content_for(:head)  do %>
<script>
    $(document).ready(function() {
        $('#photo-info').stickyMojo({footerID: '.footer', contentID: '#profile-info'});
    });
</script>
<% end %>
<div id="wrapper">
    <div id="profile">
        <div id="photo-info">
            <h4>Top Female</h4>
            <div id="photo">
                <img src="http://placehold.it/250x250" width="250" height="250" alt="user-4" />
                <div class="spacer"></div>
                <button class="btn btn-inverse btn-mini">View Profile</button> 
                <span class="pull-right">966 votes</span>
            </div>
            <div class="spacer"></div>
            <h4>Top Male</h4>
            <div id="photo">
                <img src="http://placehold.it/250x250" width="250" height="250" alt="user-4" />
                <div class="spacer"></div>
                <button class="btn btn-inverse btn-mini">View Profile</button> 
                <span class="pull-right">966 votes</span>
            </div>
        </div>
        <div id="profile-info">
            <span class="pull-left"><h4>All Users</h4> </span>
            <div class="span6 pull-right">
                <%= form_tag users_path, method: 'get', class: "form-inline pull-right" do %>
                    <%= text_field_tag :search, params[:search], placeholder: "Type a name to search" %>
                    <%= submit_tag "Search", class: 'btn', name: nil %>
                <% end %>
            </div>
            <div class="clear"></div>
            <%= render 'layouts/users'%>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>



