<% provide(:title, @user.name) %>
<% content_for(:head)  do %>
<script>
    $(document).ready(function() {
        $("a.fancybox").fancybox({type: 'image'});
        $("#rating").popover({trigger: 'hover', placement: 'top'});
        $('#photo-info').stickyMojo({footerID: '.footer', contentID: '#profile-info'});
    });
</script>
<% end %>
	<div id="wrapper">
    <div id="profile">
      <div id="photo-info">
      <h4><%= @user.name %></h4>
      <div id="photo">
          <% if @profile_pic == nil %>
            <%= gravator_for @user %>
          <% else %>
            <%= image_tag @profile_pic.image.url(:medium) %> 
          <% end %>
      </div>
      <table width="100%">
        <tr>
          <td width="50%" align="center"><button class="btn btn-block" type="button"><i class="icon-thumbs-up"></i> 15</button>
</td>
          <td width="50%" align="center"><button class="btn btn-block" type="button"><i class="icon-thumbs-down"></i> 5</button></td>
        </tr>
      </table>
    <div class="spacer"></div>
      <div class="rating">Quick Stats</div>
      <p><b>Member Since: </b><%= @user.created_at.strftime("%d %b %Y") %></p>
      <p>Last Seen: 8 hours ago</p>
      </div>
      <div id="profile-info">
      	<% if flash[:success] %>
      	   <div class="alert alert-success"><a class="close" data-dismiss="alert" href="#">&times;</a><%= flash[:success] %></div>
      	<% end %>
        <div class="rating">
        	<span class="pull-left">Rating Stats</span>
       	  <div class="clear"></div>
        </div>
        <table width="617">
          <tr>
          <td width="29%" height="130" align="center"><%= image_tag("big_star.png",width: 128, height: 128, alt: "star")%></td>
          <td width="71%" colspan="2" rowspan="2" valign="top"><table width="100%" cellpadding="5" class="table-hover">
            <tr>
              <td width="36%"><strong>Total Votes</strong></td>
              <td width="64%"><%= @user.rates_sum %></td>
            </tr>
            <tr>
              <td><strong>Profile Views</strong></td>
              <td>2536</td>
            </tr>
            <tr>
              <td><strong>Current Position</strong></td>
              <td>#85</td>
            </tr>
          </table>
<br />
          <% if current_user?(@user) %>
          <p class="smart-title">Your Current Rating &rarr; <%= number_with_precision(@average, precision: 2) %> out of 5</p>
            <%= ratings_for @user, :static %>
          <% else %>
            <% if @user.rated_by?(current_user) %>
                <p class="smart-title">Global average <%= number_with_precision(@average, precision: 2) %> out of 5</p>
             <% else %>
                <p class="smart-title">Rate <%= @user.name %> <small class="pull-right"><a href="#" id="rating" rel="popover" data-content="It's so simple to create a tooltop for my website!" data-original-title="Twitter Bootstrap Popover">Hover for Key</a></small></p>
            <% end %>
            <%= ratings_for @user %>
          <% end %>   
          <br />
          <a href="#" id="rating" class="btn btn-inverse" rel="popover" data-content="It's so simple to create a tooltop for my website!" data-original-title="Twitter Bootstrap Popover"><%= average_text(@average) %></a></p></td>
   
          </tr>
          <tr>
            <td height="83" align="center" valign="middle"><span class="clear"><span class="big-rating"><%= percentagize(@average) %>%</span></span></td>
          </tr>
        </table>
    <div class="spacer"></div>
    <div class="rating">About Me</div>
    <p>Write a few words about yourself - your personality, temperament, attitude towards life and people. What makes you stand out from the crowd? What do other people love about you? And what drives them crazy?</p>
        <div class="spacer"></div>
      <div class="rating">All Photos</div>
      <% @user.photos.each do |photo| %>
        <%= link_to(image_tag(photo.image.url(:thumb)), photo.image.url(:original), class: "fancybox", rel: "gallery1") %>              
      <% end %>        
      <hr />
      <h4>Leave a comment</h4>
      <%= form_for([@user,@comment]) do |f| %>
        <% if flash[:error] %>
            <div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">&times;</a><%= flash[:error] %></div>
        <% end %>
        <%= f.text_area :content, cols: 45, rows: 3, class: "btn-block comment-box" %>
        <%= f.submit "Comment", class: "btn" %><div class="pull-right"><%= image_tag "comment.png" %> <%= pluralize(@user.comments.count, "comment") %> so far</div>
      <% end %>
      <% if @comments.any? %>
        <div class="comments">
            <%= render @comments %>
      <% else %>
        <p>No comments yet! be the first</p>
      <% end %>
      </div>
      
   
      </div>
    <div class="clear"></div>
    </div>
    <div class="clear"></div>

</div>
